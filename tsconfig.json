{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "src/types/**/*d.ts"
    ],
    "outDir": "dist",
    "exclude": [
      "./dist",
      "./packages_v1",
      "node_modules"
    ]
  }
}
