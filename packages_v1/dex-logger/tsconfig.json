{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "ES2016",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./src",
  },
  "include": [
    "./src/**/*",
    "./@types",
  ],
  "exclude": [
    "./dist",
    "node_modules"
  ]
}
